<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/BLACK</item>
        <item name="colorAccent">@color/browser_actions_title_color</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <!-- if using android.support.v7.widget.PopupMenu -->
        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="android:itemTextAppearance">@style/itemTextStyle.AppTheme</item>
        <item name="textAppearanceLargePopupMenu">@style/PopupMenuTextLarge</item>
        <item name="textAppearanceSmallPopupMenu">@style/PopupMenuTextSmall</item>


    </style>

    <style name="AppTheme.Picker" parent="@android:style/Theme.NoTitleBar.Fullscreen" >
        <item name="android:textColorPrimary">@android:color/black</item>

        <item name="android:textSize">20sp</item>
        <item name="colorControlNormal">@android:color/black</item>
    </style>


    <style name="CustomProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progressbar</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>


    <style name="CustomProgressBarVertical" parent="android:Widget.ProgressBar">
        <item name="android:rotation">90</item>
        <item name="android:progressDrawable">@drawable/progressbar</item>
        <item name="maxWidth">10dip</item>
        <item name="maxHeight">10dip</item>

    </style>

    <style name="AppTheme.Picker2"  >

        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">60sp</item>
        <item name="colorControlNormal">@android:color/black</item>
    </style>


    <style name="AppTheme.Spinner" >
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/BLACK</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="PopupMenu" parent="Theme.AppCompat.NoActionBar">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">24sp</item>
    </style>



    <style name="PopupMenuTextLarge" parent="Theme.AppCompat.NoActionBar">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">24sp</item>
    </style>


    <style name="PopupMenuTextSmall" parent="Theme.AppCompat.NoActionBar">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="itemTextStyle.AppTheme" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="SignInOutBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#f0f0f0</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="SignInButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="SignOutButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Sign Out</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SignInOutBarBlurb">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget">
    </style>
    <style name="Widget.ProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>



</resources>
